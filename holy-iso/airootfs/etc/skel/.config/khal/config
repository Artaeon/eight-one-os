[calendars]
[[local]]
path = ~/.local/share/khal/local
type = calendar

[locale]
timeformat = %H:%M
dateformat = %Y-%m-%d
longdateformat = %Y-%m-%d
datetimeformat = %Y-%m-%d %H:%M
longdatetimeformat = %Y-%m-%d %H:%M

[sqlite]
path = ~/.local/share/khal/khal.db

[default]
default_calendar = local
highlight_event_days = True
